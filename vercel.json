{
  "buildCommand": "cd sinatra && npm install && npm run build",
  "outputDirectory": "sinatra/dist",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/chat.ts": {
      "maxDuration": 30
    },
    "api/chat/clear.ts": {
      "maxDuration": 10
    }
  }
}
